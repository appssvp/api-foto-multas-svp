{
    "openapi": "3.0.0",
    "info": {
        "title": "Fotomultas API",
        "description": "API para sistema de fotomultas",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000/v1",
            "description": "Servidor de desarrollo"
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Autenticación",
                "operationId": "7d22129569dc4edb4d5fc035ce574ec5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "admin@fotomultas.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login exitoso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "token": {
                                            "type": "string",
                                            "example": "1|abc123xyz..."
                                        },
                                        "user": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Credenciales inválidas"
                    }
                }
            }
        },
        "/detecciones": {
            "post": {
                "tags": [
                    "Detecciones"
                ],
                "summary": "Obtener detecciones de fotomultas",
                "operationId": "6c7fed21104fea167828443a17680b74",
                "requestBody": {
                    "required": false,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "fecha_inicio": {
                                        "description": "Fecha y hora de inicio",
                                        "type": "string",
                                        "format": "datetime",
                                        "example": "2025-09-06 00:00:00"
                                    },
                                    "fecha_fin": {
                                        "description": "Fecha y hora de fin",
                                        "type": "string",
                                        "format": "datetime",
                                        "example": "2025-09-06 23:59:59"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Lista de detecciones (máximo 1000 registros)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "recordId": {
                                                "type": "string"
                                            },
                                            "plateNum": {
                                                "type": "string"
                                            },
                                            "carSpeed": {
                                                "type": "integer"
                                            },
                                            "createTime": {
                                                "type": "string"
                                            },
                                            "channelInfoVO": {
                                                "type": "object"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Error de validación"
                    },
                    "401": {
                        "description": "No autorizado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/imagenes/{imgUrl}": {
            "get": {
                "tags": [
                    "Imágenes"
                ],
                "summary": "Obtener imagen de fotomulta por URL",
                "operationId": "b6e03897eec0b87d1773369c54a053ee",
                "parameters": [
                    {
                        "name": "imgUrl",
                        "in": "path",
                        "description": "URL completa de la imagen (formato: recordId/radarId/ticketId/filename)",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "53a13cba07c471ae1d8e7a6cd628b5cd/47548/135733046/full_3070_3941.jpg"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Imagen encontrada",
                        "content": {
                            "image/jpeg": {}
                        }
                    },
                    "400": {
                        "description": "URL de imagen inválida"
                    },
                    "404": {
                        "description": "Imagen no encontrada"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Cerrar sesión",
                "operationId": "cc6e59a4d24bd88186a734db855b0e3f",
                "responses": {
                    "200": {
                        "description": "Logout exitoso"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/health": {
            "get": {
                "tags": [
                    "Health"
                ],
                "summary": "Health check endpoint",
                "operationId": "295aed7b8327a5732af6c910e7cca49c",
                "responses": {
                    "200": {
                        "description": "API funcionando correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "ok"
                                        },
                                        "database": {
                                            "type": "string",
                                            "example": "connected"
                                        },
                                        "records": {
                                            "type": "integer",
                                            "example": 1250
                                        },
                                        "timestamp": {
                                            "type": "string",
                                            "example": "2025-01-15T10:30:45.000000Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error en el sistema"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Auth"
        },
        {
            "name": "Detecciones",
            "description": "Detecciones"
        },
        {
            "name": "Imágenes",
            "description": "Imágenes"
        },
        {
            "name": "Health",
            "description": "Health"
        }
    ]
}